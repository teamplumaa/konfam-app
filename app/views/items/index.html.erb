<!-- CATEGORY LIST SECTION -->
<section class="clearfix sectioner">
	<div class="row">
    <div class="col-sm-4 col-xs-12">

			<div class="sidebarInner">
				<ul class="sidebar-link">
          <li class="sidebar-item">
            <%= link_to "Your Items", items_path, class: "sidebar-link active" %>
          </li>
          <li class="sidebar-item">
            <%= link_to "Your Items", items_path, class: "sidebar-link active" %>
          </li>
				</ul>
      </div>
      <div class="panel panel-default panel-card">
				<div class="panel-heading">
					Listings <span class="label label-primary">Monthly</span>
				</div>
				<div class="panel-body">
					<h2>71,503</h2>
					<p>Compare to last month <span class="resultInfo resultUp">10% <i class="fa fa-level-up" aria-hidden="true"></i></span></p>
				</div>
			</div>

		</div>
		<div class="col-sm-8 col-xs-12 extra30">
			<div class="resultBar barSpaceAdjust">
				<h2>We found <span>8</span> Results for you</h2>
			</div>
      <div class="row">

      </div>
      <% @items.each do |item| %>

				<div class="listContent">
					<div class="row">
						<div class="col-sm-5 col-xs-12">
							<div class="categoryImage">
								<%= image_tag item.cover_photo(:original), class:"image-150 img-responsive img-rounded" %>
								<span class="label label-primary">Active</span>
							</div>
						</div>
						<div class="col-sm-7 col-xs-12">
							<div class="categoryDetails">
								<!-- <ul class="list-inline rating">
									<li><i class="fa fa-star" aria-hidden="true"></i></li>
									<li><i class="fa fa-star" aria-hidden="true"></i></li>
									<li><i class="fa fa-star" aria-hidden="true"></i></li>
									<li><i class="fa fa-star" aria-hidden="true"></i></li>
									<li><i class="fa fa-star" aria-hidden="true"></i></li>
								</ul> -->
								<h5>
                  <a style="color: #222222"><%= item.item_name %></a>
                  <span class="likeCount konfammer">
                    <%= link_to listing_item_path(item) do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <% end %>
                  </span>
                </h5>
                <p><ul class="list-inline list-tag ml5">
									<li><a href="#"><%= item.category_type %></a></li>,
									<li><a href="#"><%= item.item_type %></a></li>
								</ul></p>
								<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed eiusmod tempor incididunt  labore et dolore magna aliqua. </p>
							</div>
						</div>
					</div>
				</div>

      <% end %>

			<div class="paginationCommon blogPagination categoryPagination text-center hidden-sm hidden-xs">
				<nav aria-label="Page navigation">
					<ul class="pagination">
						<li>
							<a href="#" aria-label="Previous">
								<span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
							</a>
						</li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#">5</a></li>
						<li>
							<a href="#" aria-label="Next">
								<span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>

	</div>
</section>
